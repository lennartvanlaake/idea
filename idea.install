function idea_schema()
{
  $schema['languages'] = array(
    'description' => 'The table for languages',
    'fields' => array(
      'language' => array(
        'type' => 'text',
        'not null' => TRUE,
      )
    )
  );
  $schema['levels'] = array(
    'description' => 'The table for EQF levels',
    'fields' => array(
      'level' => array(
        'type' => 'text',
        'not null' => TRUE,
      )
    )
  );

  $schema['audiences'] = array(
    'description' => 'The table for EQF levels',
    'fields' => array(
      'audience' => array(
        'type' => 'text',
        'not null' => TRUE,
      )
    )
  );

  $schema['training_material'] = array(
    'description' => 'Generic table for uploaded content or links',
    'fields' => array(
      'id' => array(
        'type' => 'serial',
        'not null' => TRUE,
      ),
      'description' => array(
        'type' => 'text',
        'not null' => TRUE,
      ),
      'language' => array(
        'type' => 'text',
        'not null' => TRUE,
      ),
      'level' => array(
        'type' => 'text',
        'not null' => TRUE,
      ),
      'audience' => array(
        'type' => 'text',
        'not null' => TRUE,
      )
    )
  );

  return $schema;
}


